<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="商家名称:"
            android:textSize="20sp"
            android:textColor="#9c9c9c" />

        <TextView
            android:id="@+id/textView_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:text="我的地址:"
            android:textColor="#9c9c9c" 
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_name"
            android:layout_toRightOf="@+id/textView_name"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="TextView" />
        <TextView 
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@+id/textView_address"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:text="ggg"/>

    </RelativeLayout>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/green_line"
        android:layout_margin="10dp"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
        	android:id="@+id/textView_classfy"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="30dp"
        	android:textSize="20sp"
        	android:text="物品类型:" 
        	android:textColor="#9c9c9c"/>
        
        
        <Spinner
                android:id="@+id/spinner_classfy"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/textView_classfy"
                android:entries="@array/degrees"
                android:prompt="@string/degrees_prompt"
                android:textSize="20sp" />
        
        
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/textView_goodsnumbeer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:text="物品数量:"
            android:textColor="#9c9c9c"/>
        <EditText 
            android:id="@+id/et_goodsnumbeer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView_goodsnumbeer"
            android:layout_marginLeft="20dp"
            android:layout_alignBottom="@+id/textView_goodsnumbeer"
            android:textSize="20sp"
            android:text="1"
           
            />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/textView_totalorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:text="总  单  量:"
            android:textColor="#9c9c9c"/>
        <EditText 
            android:id="@+id/et_totalorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView_totalorder"
            android:layout_marginLeft="20dp"
            android:layout_alignBottom="@+id/textView_totalorder"
            android:textSize="20sp"
            
            android:text="1"/>
    </RelativeLayout>
	
	<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/edittext_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:text="备注:"
            android:textColor="#9c9c9c"/>
        <EditText 
            android:id="@+id/et_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext_remark"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            
            android:textSize="20sp"/>
       
    </RelativeLayout>
    <Button
        android:id="@+id/bt_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="#008EE6"
        android:text="提交"
        android:textColor="#ffffff" />
	
    

</LinearLayout>